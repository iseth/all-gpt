{
  "expo": {
    "name": "all-gpt",
    "slug": "all-gpt",
    "scheme": "all-gpt",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.allgpt.app"
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro"
    },
    "plugins": [
      "expo-router",
      "expo-build-properties",
      [
        "@sentry/react-native/expo",
        {
          "url": "https://sentry.io/",
          "note": "AUTH_TOKEN",
          "project": "projectname",
          "organization": "organization"
        }
      ]
    ]
  }
}
